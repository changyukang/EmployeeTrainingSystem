<% provide(:title, 'Add Group') %>
<h1>New Group</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@group) do |f| %>

    	<%= render 'shared/error_messages', obj: @group %>

    	<%= f.label :name %>
      	<%= f.text_field :name, class: 'form-control' %>

      	<%= f.submit "Create group", class: "btn btn-primary" %>
    <% end %>

<%= link_to 'Back', groups_path %>