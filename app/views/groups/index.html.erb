<% provide(:name, 'All groups') %>
<h1>All groups</h1>

<%= pie_chart UserGroup.joins(:group).group('groups.name').count, library: {legend:{position: "bottom"}} %>

<ul class="users">
<%= will_paginate @groups %>  
  <% @groups.each do |group| %>
    <%#= "group:"%><%#=group.id%>
    <%= render group %>  
  <% end %> 
<%= will_paginate @group %>
</ul>

<% if current_user.manager? %>
  <%= link_to 'Create Group', new_group_path %> | 
  <%= link_to 'Assign User', new_user_group_path %>
<% end %>
