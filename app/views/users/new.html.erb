<% provide(:title, 'Add User') %>
<h1>Add User</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages', obj: @user %>

      <%= f.radio_button :a %>
      <%= f.label :name,'Question', class: 'form-control' %>

      <%= f.submit "Submit", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>