
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @quiz do |f| %>
      
      <p>
        <%= f.label :title %><br />
        <%= f.text_field :title %>
      </p>

      <%= f.label :article_id %>
      <%= f.collection_select :article_id, Article.order(:title),:id,:title, include_blank: true %>

      <%= f.fields_for :questions do |builder| %>
        <%= render 'question_fields', :f => builder %>
      <% end %>

      <p><%= f.submit "Submit" %></p>
    <% end %>
  </div>
</div>