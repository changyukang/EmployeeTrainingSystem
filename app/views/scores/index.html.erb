<p id="notice"><%= notice %></p>

<h1>All Scores</h1> 

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Article</th>
      <th>Score</th>
      <th colspan="3"></th>
    </tr>
  </thead>


 <tbody>
    <% @scores.each do |score| %>
      <tr>
        <td><%= User.find(score.user_id).name %></td>
        <td><%= Article.find(score.article_id).title %></td>
        <td><%= score.score %></td>
        <td><%= link_to 'Edit', edit_score_path(score) %></td>
        <td><%= link_to 'Destroy', score, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
