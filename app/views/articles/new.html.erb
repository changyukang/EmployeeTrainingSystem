<% provide(:title, 'Add Article') %>
<h1>New Article</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@article) do |f| %>

    	<%= render 'shared/error_messages', obj: @article %>

    	<%= f.label :title %>
      	<%= f.text_field :title, class: 'form-control' %>

     	<%= f.label :category %>
      	<%= f.text_field :category, class: 'form-control' %>

      	<%= f.label :body %>
      	<%= f.text_area :body, class: 'form-control', size: "60x24" %>

        <%= f.label :course_id %>
        <%= f.collection_select :course_id, Course.order(:name),:id,:name, include_blank: true %>

      	<%= f.submit "Create article", class: "btn btn-primary" %>
    <% end %>


<%= link_to 'Back', articles_path %>
