<% provide(:title, "Edit atricle") %>
<h1>Edit Article</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@article) do |f| %>

    	<%= render 'shared/error_messages', obj: @article %>

    	<%= f.label :title %>
      	<%= f.text_field :title, class: 'form-control' %>

     	<%= f.label :category %>
      	<%= f.text_field :category, class: 'form-control' %>

      	<%= f.label :body %>
      	<%= f.text_area :body, class: 'form-control', size: "60x24" %>

      	<%= f.submit "Update article", class: "btn btn-primary" %>
    <% end %>

  </div>
</div>