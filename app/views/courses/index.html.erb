<p id="notice"><%= notice %></p>

<h1>Courses</h1>

<ul class="courses">
  <%= will_paginate @courses%>  
    <% @courses.each do |course| %>
      <h4>
        <strong><%= link_to course.name, course %>
          <% if current_user.manager? %>
            | <%= link_to "delete", course, method: :delete, data: { confirm: "You sure?" } %>
          <% end %>
        </strong>
      </h4>
    <% end %> 
  <%= will_paginate @courses%>
</ul>

