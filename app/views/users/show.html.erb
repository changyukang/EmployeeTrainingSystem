<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
</div>



<p id="notice"><%= notice %></p>

<dl>
  <dt>Name:</dt>
  <dd><%= @user.name %></dd>
  <dt>Email:</dt>
  <dd><%= @user.email %></dd>
  <dt>Job Title:</dt>
  <dd><%= @user.jobTitle %></dd>
</dl>

<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
